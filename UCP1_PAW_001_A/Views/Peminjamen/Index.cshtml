@model IEnumerable<UCP1_PAW_001_A.Models.Peminjaman>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<p>Ketersediaan : <select></select> Cari Data : <input /><button>Filter</button></p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Tanggal Peminjaman")
            </th>
            <th>
                @Html.DisplayName("Total Pembayaran")
            </th>
            <th>
                @Html.DisplayName("Nama Customer")
            </th>
            <th>
                @Html.DisplayName("Id Mobil")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TanggalPeminjaman)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPembayaran)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCustomerNavigation.NamaCustomer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdMobilNavigation.IdMobil)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPeminjaman"><i class="fa fa-marker fa-lg"></i></a> |
                <a asp-action="Details" asp-route-id="@item.IdPeminjaman"><i class="fas fa-list fa-lg"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.IdPeminjaman"><i class="fa fa-trash-alt fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
